{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "ES2020",
    "declaration": true,
    "outDir": "dist", 
    "rootDir": "src", 
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, 
    "baseUrl": ".",  
    "paths": {
      "*": ["src/*"] 
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
